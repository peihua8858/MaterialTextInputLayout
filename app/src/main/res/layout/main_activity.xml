<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.peihua.inputlayout.textfield.TextInputLayout
        android:id="@+id/text_input_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Username"
        app:boxBackgroundColor="@color/colorOnBackground"
        app:boxBackgroundMode="outline"
        app:boxCollapsedPaddingTop="16dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@color/input_stroke"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:errorTextAppearance="@style/TextAppearance.Design.Error"
        app:hideHintCutout="true"
        app:hintEnabled="true"
        app:hintErrorEnabled="false"
        app:hintTextAppearance="@style/TextAppearance.Design.Hint">

        <com.peihua.inputlayout.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:textSize="12sp" />
    </com.peihua.inputlayout.textfield.TextInputLayout>

    <com.peihua.inputlayout.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Password"
        app:boxBackgroundColor="@color/colorOnBackground"
        app:boxBackgroundMode="outline"
        app:boxCollapsedPaddingTop="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@color/input_stroke"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/background"
        app:hideHintCutout="true"
        app:hintAnimationEnabled="false"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/TextAppearance.Design.Hint"
        app:isFixedExpand="true"
        app:prefixText="ssssssss">

        <com.peihua.inputlayout.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:singleLine="true"
            android:textSize="12sp" />
    </com.peihua.inputlayout.textfield.TextInputLayout>

    <cz.ackee.sample.PhoneTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Phone Number"
        app:boxBackgroundColor="@color/colorOnBackground"
        app:boxBackgroundMode="outline"
        app:boxCollapsedPaddingTop="10dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@color/input_stroke"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/background"
        app:hideHintCutout="true"
        app:hintAnimationEnabled="false"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/TextAppearance.Design.Hint"
        app:isFixedExpand="true">

        <com.peihua.inputlayout.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="Phone Number ssssssssssss"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textSize="12sp" />
    </cz.ackee.sample.PhoneTextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingTop="28dp"
            android:paddingBottom="16dp" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
